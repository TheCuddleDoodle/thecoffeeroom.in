            --ar-btn-hover-bg: #8d7aa8;
            --ar-btn-hover-border-color: #8d7aa8;
            --ar-btn-active-bg: #8d7aa8;
            --ar-btn-active-border-color: #8d7aa8;
            --ar-btn-disabled-color: #8d7aa8;
            --ar-btn-disabled-border-color: #8d7aa8;
        }
    </style>
    @await RenderSectionAsync("cssStyles", required: false)
</head>
<body class="@ViewData["BodyBg"]">
    <div class="page-loading active">
        <div class="page-loading-inner">
            <div class="page-spinner"></div><span>Loading...</span>
        </div>
    </div>
    <main class="page-wrapper">
       @*@await Html.PartialAsync("NavBars/Default")*@
        @RenderBody()
        @await Html.PartialAsync("Modals/_Modals")
    </main>
    @await Html.PartialAsync("Footers/Default")

    <a class="btn-scroll-top" href="#top" data-scroll>
        <svg viewBox="0 0 40 40" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <circle cx="20" cy="20" r="19" fill="none" stroke="currentColor" stroke-width="1.5" stroke-miterlimit="10"></circle>
        </svg><i class="ai-arrow-up"></i>
    </a>

    <script src="~/libraries/axios/axios.min.js"></script>
    <script>
        
        function livesearch() {
            u('#search_stat').html('Search <i class="ai-clock mb-1"></i>');
            //document.getElementById("search_stat").innerHTML = `Search <i class="ai-clock mb-1"></i>`;
            let ddr = document.getElementById("global_search").value;
            if (ddr.length >= 2) {
                axios.get('/api/livesearch/all/' + ddr)
                    .then(response => {
                        console.log(response.data);
                        const sb = new StringBuilder();
                        for (var i = 0; i < response.data.length; i++) {
                            sb.append('<div class="d-flex align-items-center border-bottom pb-4 mb-4">');
                            sb.append('<a class="position-relative d-inline-block flex-shrink-0 bg-secondary rounded-1" href="' + response.data[i].url + '">');
                            sb.append('<img src="/assets/images/search_thumbs/' + response.data[i].image + '.svg" width="70" alt="Product" /></a><div class="ps-3">');
                            sb.append('<h4 class="h6 mb-2"><a href="/">' + response.data[i].title + '</a></h4>');
                            sb.append(' <span class="fs-sm text-muted ms-auto">' + response.data[i].description + '</span>');
                            sb.append('</div></div>');
                        }
                        u('#search_results').html(sb.toString());
                        u('#search_stat').html('Search');
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        u('#search_stat').html('Search');
                        u('#search_results').html('');
                    });
            }
            else {
                    u('#search_results').html('');
                    u('#search_stat').html('Search');
            }
        }
    </script>
       
    @await RenderSectionAsync("jsScripts", required: false)
    <script src="~/assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/smooth-scroll/dist/smooth-scroll.polyfills.min.js"></script>
    <script src="~/libraries/aos/aos.js"></script>
    @await RenderSectionAsync("jsLib", required: false)
    
    
    <environment include="development">
        <script src="~/assets/js/coffeeroom.min.js" asp-append-version="true"></script>
        <script src="~/assets/js/theme.min.js"></script>
    </environment>
    <environment include="production">
        <script src="~/assets/js/coffeeroom.js" asp-append-version="true"></script>
        <script src="~/assets/js/theme.js"></script>
    </environment>
</body>
</html>
@page "/alpine"
@model Coffeeroom.Pages.Test.AlpineModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alpine.js JSON Fetch and Display Example</title>
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@2.8.2/dist/alpine.js" defer></script>
</head>
<body>
    <div x-data="{
        jsonData: null,
        fetchData: async function() {
            const response = await fetch('/api/livesearch/all/');
            const json = await response.text();
            this.jsonData = JSON.parse(json);
        }
    }">
        <button @@click="fetchData">Fetch Data</button>
        <template x-if="jsonData">
            <h2>Data:</h2>
            <ul>
                <template x-for="item in jsonData">
                    <li>                        
                        <div>
                            <strong x-text="item.title"></strong><br>
                            <span x-text="item.description"></span>
                            <!-- Add additional item properties as needed -->
                        </div>
                    </li>
                </template>
            </ul>
        </template>
    </div>
</body>
</html>